      <hr style="border: black solid 1px; margin: 1em 5em 1em 5em;">
      <form action="/plan" method="POST" >
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputEmail4">Forename</label>
            <input type="text" class="form-control" name="name" id="inputEmail4" placeholder="Forename">
          </div>
          <div class="form-group col-md-6">
            <label for="inputPassword4">Surname</label>
            <input type="text" class="form-control" id="inputPassword4" name="surname" placeholder="Surname">
          </div>
        </div>
        <div class="form-group">
          <label for="inputAddress">Email address</label>
          <input type="email" name="email" class="form-control" id="inputAddress" placeholder="xyz@gmail.com">
        </div>
        <div class="form-group">
          <label for="inputAddress2">Are there any medical conditions we should be aware of?</label>
          <input type="text" name ="medical" class="form-control" id="inputAddress2" placeholder="Allergies etc..">
        </div>
        <div class="form-row">
          <div class="form-group col-md-4">
            <label for="inputCity">How many people will be going on this trip?</label>
            <select type="text" name = "size" class="form-control" id="inputCity">
              <option selected></option>
              <option> 1-6 </option>
              <option> 6-12 </option>
            </select>
          </div>
          <div class="form-group col-md-4">
            <label for="inputState">Budget</label>
            <select id="inputState" name = "budget" type="text" class="form-control">
              <option selected></option>
              <option>£1000~</option>
              <option>£1500+</option>
            </select>
          </div>
          <div class="form-group col-md-4">
            <label for="inputZip">Duration in days</label>
            <select type="text" name="duration" class="form-control" id="inputZip">
              <option selected></option>
              <option>1-7</option>
              <option>7-14</option>
             <!-- <option>14-21</option> --> 
            </select>
        </div>
        </div>
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
              Check me out
            </label>
          </div>
        </div>
        <button type="submit" class="btn btn-primary button_colour">Generate plan</button>
      </form>



 
